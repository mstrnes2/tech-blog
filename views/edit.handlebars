<div class="row mt-4">
  <div class="col-md-6">
    <h3>Edit your post:</h3>

    <form class="form new-project-form">
      <div class="form-group">
        <input class="form-input" type="hidden" id="post-id" value = "{{id}}" />
      </div>
      <div class="form-group">
        <label for="project-funding">title:</label>
        <input class="form-input" type="number" id="title" value = "{{title}}" />
      </div>
      <div class="form-group">
        <label for="project-desc">content:</label>
        <textarea class="form-input" id="content" >{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
      </div>
    </form>
    <button type="button" class="btn btn-danger" id="delete">Delete</button>
  </div>
  <script src="/js/edit.js"></script>